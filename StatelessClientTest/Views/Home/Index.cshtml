@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">This is the home page</h1>
    @if (!User.Identity.IsAuthenticated)
    {
        <p>Please log in to view the game page</p>
    }
    else
    {
        <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="Index">Click here to visit the game page</a>
    }
</div>